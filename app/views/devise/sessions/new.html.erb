<%= form_with model: resource,
              as: resource_name,
              url: session_path(resource_name),
              data: { turbo: false },
              class: "space-y-5" do |f| %>

  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "block w-full rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 text-sm px-3 py-2" %>
  </div>

  <!-- Password -->
  <div>
    <div class="flex items-center justify-between mb-1">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    </div>

    <%= f.password_field :password,
          autocomplete: "current-password",
          class: "block w-full rounded-lg border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 text-sm px-3 py-2" %>
  </div>

  <!-- Remember me -->
  <% if devise_mapping.rememberable? %>
    <div class="flex items-center">
      <%= f.check_box :remember_me,
            class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
    </div>
  <% end %>

  <!-- Submit -->
  <div>
    <%= f.submit "Sign in",
          class: "w-full flex justify-center items-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

<% end %>