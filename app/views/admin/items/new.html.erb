<div class="max-w-sm">
  <h1 class="text-xl font-bold mb-4">New Item</h1>
  <%= form_with model: [:admin, @item], class: "space-y-4" do |f| %>
    <% if @item.errors.any? %>
      <div class="p-4 rounded border border-red-300 bg-red-50 text-red-700">
        <p><strong><%= pluralize(@item.errors.count, "error") %> prevented this price from being saved:</strong></p>
        <ul class="list-disc list-inside mt-2">
          <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :sku, 'SKU', class: "block mb-1 font-semibold" %>
      <%= f.text_field :sku, class: "border px-3 py-2 rounded w-full", placeholder: "SKU..." %>
    </div>

    <div class="flex items-center gap-2">
      <%= f.check_box :active %>
      <%= f.label :active %>
    </div>

    <%= link_to "Back To List", :back, class: "px-3 py-1.5 text-sm text-gray-600 bg-gray-200 rounded-lg hover:bg-gray-300 transition" %>
    <%= f.submit "Create Item",
        class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  <% end %>
</div>