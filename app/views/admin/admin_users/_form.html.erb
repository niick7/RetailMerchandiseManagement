<%= form_with model: [:admin, :admin, @user], class: "space-y-4" do |f| %>
  <% if @user.errors.any? %>
    <div class="p-3 bg-red-100 text-red-700 rounded border border-red-300">
      <% @user.errors.full_messages.each do |msg| %>
        <div>- <%= msg %></div>
      <% end %>
    </div>
  <% end %>

  <%= f.hidden_field :is_admin, value: true %>
  <div>
    <%= f.label :email, class: "block mb-1 font-semibold" %>
    <%= f.email_field :email,
        class: "border px-3 py-2 rounded w-full",
        placeholder: "Enter email" %>
  </div>

  <div>
    <%= f.label :password, class: "block mb-1 font-semibold" %>
    <%= f.password_field :password,
        class: "border px-3 py-2 rounded w-full",
        placeholder: ("Password") %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block mb-1 font-semibold" %>
    <%= f.password_field :password_confirmation,
        class: "border px-3 py-2 rounded w-full",
        placeholder: "Confirm password" %>
  </div>

  <div class="flex items-center space-x-2">
    <%= f.check_box :active, class: "h-4 w-4" %>
    <label class="text-sm font-medium" for="user_active">Active</label>
  </div>


  <%= link_to "Back To List", :back, class: "px-3 py-1.5 text-sm text-gray-600 bg-gray-200 rounded-lg hover:bg-gray-300 transition" %>
  <%= f.submit(@user.new_record? ? "Create User" : "Update User",
      class: "px-4 py-2 bg-blue-600 text-white rounded") %>
<% end %>